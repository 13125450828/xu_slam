#!/usr/bin/python
#coding=utf-8

import rospy
from voice_msg.msg import *

def talker():
    pub = rospy.Publisher('Command',Command, queue_size=10)
    rospy.init_node('talker', anonymous=True)
    rate = rospy.Rate(10) # 10hz
    start = Command()
    start.my_motion.motion=True
    start.my_motion.direction=1
    #start.my_motion.pattern=2
    start.my_motion.stepcount=1
    while not rospy.is_shutdown():
        #start.motion=True
        #start.direction=1
        pub.publish(start)
        rate.sleep()

if __name__ == '__main__':
    try:
        talker()
    except rospy.ROSInterruptException:
        pass
